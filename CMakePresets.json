{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "skia-release",
      "displayName": "Aseprite with Skia (Release)",
      "description": "Configure Aseprite to use Skia backend with Release Skia libs",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "DLAF_BACKEND": "skia",
        "DSKIA_DIR": "C:/deps/skia",
        "DSKIA_LIBRARY": "C:/deps/skia/out/Release-x64/skia.lib",
        "DSKIA_LIBRARY_DIR": "C:/deps/skia/out/Release-x64"
      }
    }
  ]
}
